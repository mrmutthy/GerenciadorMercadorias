<Window x:Class="GerenciadorMercadorias.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GerenciadorMercadorias.UI"
        mc:Ignorable="d"
        Title="Gerenciador de Mercadorias" Height="450" Width="800">
    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Controle de Mercadorias"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Nome:"/>
            <TextBox Text="{Binding NomeMercadoria, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Descrição:"/>
            <TextBox Text="{Binding DescricaoMercadoria, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Preço:"/>
            <TextBox Text="{Binding PrecoMercadoria, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Estoque:"/>
            <TextBox Text="{Binding EstoqueMercadoria, UpdateSourceTrigger=PropertyChanged}" />

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Adicionar" Command="{Binding AdicionarCommand}" Margin="0,0,10,0"/>
                <Button Content="Listar" Command="{Binding ListarCommand}"/>
            </StackPanel>
        </StackPanel>

        <DataGrid Grid.Row="2" Margin="0,0,0,10"
                  ItemsSource="{Binding Mercadorias}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectedItem="{Binding SelectedMercadoria, Mode=TwoWay}"
                  Visibility="{Binding ListaVisivel, Converter={StaticResource BoolToVisibilityConverter}}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" />
                <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}" />
                <DataGridTextColumn Header="Preço" Binding="{Binding Preco}" />
                <DataGridTextColumn Header="Estoque" Binding="{Binding Estoque}" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0"
                    Visibility="{Binding BotoesEdicaoVisiveis, Converter={StaticResource BoolToVisibilityConverter}}">
            <Button Content="Editar" Command="{Binding AtualizarCommand}" Margin="0,0,10,0"/>
            <Button Content="Excluir" Command="{Binding ExcluirCommand}"/>
        </StackPanel>
    </Grid>
</Window>